@model Salary.Models.ViewModel.LoginUserVM

@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido</h1>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login50">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { htmlAttributes = new { @class = "login100-form validate-form" } }))
                {
                    <div class="wrap-input100 validate-input">
                        @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "input100", @placeholder = "Usuario", @required = "true" } })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>
                    <br />
                    <div class="col-12 col-md-12 col-sm-12 col-lg-12" data-validate="La contraseña es requerida">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "input100", @name = "pass", @type = "password", @placeholder = "Contraseña", @required = "true", @id = "PassId" } })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <br />
                    <div class="col-12 col-md-12 col-sm-12 col-lg-12">
                        <input type="submit" value="Ingresar" class="btn btn-primary col-12 col-md-12 col-sm-12 col-lg-2" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>


